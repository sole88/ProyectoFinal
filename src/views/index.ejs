<%- include('partials/header') -%> 
    <!-- Inicio Main -->
    <!-- Inicio Section -->
    <section class="hero">
      <article class="hero__content container">
        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubri el proximo Funko Shop de tu coleccion</p>
        <a class="hero__link" href="shop">SHOP</a>
      </article>
    </section>
    <!-- Fin Section -->
    <main class="main-container">
      <% collections.forEach( collection => { %>
      <section class="collection container">
        <article class="collection__content">
          <h3 class="collection__title"><%= collection.licence_name %></h3>
          <p class="collection__text"><%= collection.licence_description %>  </p>
          <a class="collection__link" href="/shop?filter=licence-<%= collection.licence_id %>">VER COLECCIÓN</a>
        </article>
        <picture class="collection__cover">
          <img src="<%= collection.licence_image %>" alt="Figura coleccionable de <%= collection.licence_name %>" />
        </picture>
      </section>
      <% }); %>
      <!-- SLIDER -->
      <section class="slider container glide">
        <h2 class="slider__title">últimos lazamientos</h2>
        <div class="glide__track" data-glide-el="track">
          <ul class="slider__items glide__slides">
            <li class="slider__item glide__slide">
              <article class="card-item">
                <a id="funko_1" class="card-item__link" href="shop/item/:id">
                  <picture class="card-item__cover">
                    <span class="card-item__tag">Nuevo</span>
                    <img class="card-item__img--front"
                      src="./img/star-wars/trooper-1.webp"
                      alt="SW Trooper 1"
                    />
                    <img class="card-item__img--back"
                      src="./img/star-wars/trooper-box.webp"
                      alt="SW Trooper box"
                    />
                  </picture>
                  <div class="card-item__content">
                    <p class="card-item__licence">STAR WARS</p>
                    <h4 class="card-item__name">STORMTROOPER LIGHTSABER</h4>
                    <p class="card-item__price">$ 1799,99</p>
                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </a>
              </article>
            </li>
            <li class="slider__item glide__slide">
              <article class="card-item">
                <a id="funko_2" class="card-item__link" href="./pages/shop/item.html">
  
                  <picture class="card-item__cover">
                    <span class="card-item__tag">Nuevo</span>
                    <img class="card-item__img--front"
                      src="./img/pokemon/pidgeotto-1.webp"
                      alt="Pokemon Pidge 1"
                    />
                    <img class="card-item__img--back"
                      src="./img/pokemon/pidgeotto-box.webp"
                      alt="Pokemon Pidge box"
                    />
                  </picture>
                  <div class="card-item__content">
                    <p class="card-item__licence">POKEMON</p>
                    <h4 class="card-item__name">PIDGEOTTO</h4>
                    <p class="card-item__price">$ 1799,99</p>
                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </a>
              </article>
            </li>
            <li class="slider__item glide__slide">
              <article class="card-item">
                <a id="funko_3" class="card-item__link" href="./shop/item.html">
                  <picture class="card-item__cover">
                    <span class="card-item__tag">Nuevo</span>
                    <img class="card-item__img--front"
                      src="./img/harry-potter/luna-1.webp"
                      alt="Harry Luna 1"
                    />
                    <img class="card-item__img--back"
                      src="./img/harry-potter/luna-box.webp"
                      alt="Harry Luna box"
                    />
                  </picture>
                  <div class="card-item__content">
                    <p class="card-item__licence">HARRY POTTER</p>
                    <h4 class="card-item__name">LUNA LOVEGOOD LION MASK</h4>
                    <p class="card-item__price">$ 1799,99</p>
                    <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                  </div>
                </a>
              </article>
            </li>
          </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="mdi:chevron-left"></iconify-icon></button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="mdi:chevron-right"></iconify-icon></button>
        </div>
      </section>
    </main>
    <!-- Fin Main -->
   <%- include('partials/footer') -%> 
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="./js/glide.js"></script>
    <script src="./js/clientCart.js"></script>
    <link rel="stylesheet" href="/css/indexStyle.css">
  </body>
</html>
