<%- include('../partials/header') -%>

    <main class="main container">
      <section class="register container">
        <h1 class="regiter__title">CREA TU CUENTA</h1>
        <p class="regiter__subtitle">
          Completa el formulario para ser parte del mundo de los funkos
        </p>
        <form class="form" action="/auth/register" method="POST" enctype="application/x-www-form-urlencoded">
          <label class="label col-1" for="nombre">Nombre:</label>
          <input
            class="input__text col-2"
            type="text"
            id="nombre"
            name="nombre"
            placeholder="John"
            required
          />
          <br /><br />

          <label class="label col-1" for="apellido">Apellido:</label>
          <input
            class="input__text col-2"
            type="text"
            id="apellido"
            name="apellido"
            placeholder="Doe"
            required
          />
          <br /><br />

          <label class="label col-1" for="email">Email:</label>
          <input
            class="input__text col-2"
            type="email"
            id="email"
            name="email"
            placeholder="johndoe@correo.com"
            required
          />
          <br /><br />

          <label class="label col-1" for="pass">Contraseña:</label>
          <input
            class="input__text col-2"
            type="password"
            id="pass"
            name="pass"
            placeholder="********"
            required
          />
          <br /><br />

          <label class="label col-1" for="pass2">Repita Contraseña:</label>
          <input
            class="input__text col-2"
            type="password"
            id="pass2"
            name="pass2"
            placeholder="********"
            required
          />
          <br /><br />

          <input class="submit col-1" type="submit" value="Registrar" />
          <label class="aceptoTerminos col-2">
            <input
              class="check"
              type="checkbox"
              id="aceptoTerminos"
              name="aceptoTerminos"
              required
            />
            Acepto <b>Términos y Condiciones</b>
          </label>
        </form>
      </section>
    </main>
    <%- include('../partials/footer') -%>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <link rel="stylesheet" href="/css/registerStyle.css">
  </body>
</html>